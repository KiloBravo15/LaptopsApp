                    </StackPanel>-->
                </StackPanel>
            </StackPanel>
            <!-- CRUD Buttons and Info Panel for Laptops -->
            <StackPanel Orientation="Vertical">
                <!--<StackPanel Orientation="Horizontal">-->
                <Button Margin="0,5,5,0" Click="AddLaptop" Width="100" Height="30">
                    Add Laptop
                </Button>
                <Button Margin="0,5,5,0" Click="EditLaptop" Width="100" Height="30">
                    Edit Laptop
                </Button>
                <Button Margin="0,5,5,0" Click="RemoveLaptop" Width="100" Height="30">
                    Remove Laptop
                </Button>
            </StackPanel>
