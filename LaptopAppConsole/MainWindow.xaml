        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Laptop Data Source, Filter, and Search -->
        <StackPanel Grid.Row="0" Margin="10">
