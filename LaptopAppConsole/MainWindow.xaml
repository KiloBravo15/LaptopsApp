            <!--</StackPanel>-->

        </StackPanel>

        <!-- ListView for Laptops -->
        <ListView Grid.Row="1" Margin="10" Name="LaptopList" SelectionChanged="LaptopList_SelectionChanged"
                  ScrollViewer.VerticalScrollBarVisibility="Visible" ItemsSource="{Binding ElementName=Window, Path=LaptopLVM.Laptops}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Model name">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding LaptopModel}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Processor Type">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding LaptopProcessor}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="RAM">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding LaptopRAM}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Storage (GB)">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding LaptopStorageInGB}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>

        </ListView>

        <!-- Producer Information -->
        <StackPanel Grid.Row="2" Margin="10">
            <!-- ListView for Producers -->
            <ListView Grid.Row="1" Margin="10" Name="ProducerList" SelectionChanged="ProducerList_SelectionChanged"
          ScrollViewer.VerticalScrollBarVisibility="Visible" ItemsSource="{Binding ElementName=Window, Path=ProducerLVM.Producers}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Name">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ProducerName}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Description">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ProducerDescription}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                    </GridView>
                </ListView.View>
            </ListView>

            <Button Content="Add Producer" Click="AddProducer" Width="100" Height="30" Margin="0,10,0,0"/>
            <Button Content="Edit Producer" Click="EditProducer" Width="100" Height="30" Margin="0,5,0,0"/>
            <Button Content="Remove Producer" Click="RemoveProducer" Width="100" Height="30" Margin="0,5,0,0"/>
        </StackPanel>
    </Grid>
</Window>
