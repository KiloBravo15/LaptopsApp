@model LaptopsApp.Web.Models.Laptop

@{
    Layout = "_Layout";
}

<h2>Laptop Details</h2>

<div>
    <h4>Laptop</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>
        <dt class="col-sm-2">
            Producer
        </dt>
        <dd class="col-sm-10">
            @Model.Producer?.Name
        </dd>
        <dt class="col-sm-2">
            Model
        </dt>
        <dd class="col-sm-10">
            @Model.Model
        </dd>
        <dt class="col-sm-2">
            Processor
        </dt>
        <dd class="col-sm-10">
            @Model.Processor.ToString()
        </dd>
        <dt class="col-sm-2">
            RAM
        </dt>
        <dd class="col-sm-10">
            @Model.RAM
        </dd>
        <dt class="col-sm-2">
            Storage
        </dt>
        <dd class="col-sm-10">
            @Model.StorageInGB GB
        </dd>
    </dl>
</div>
<a href="@Url.Action("Index")">Back to List</a>
