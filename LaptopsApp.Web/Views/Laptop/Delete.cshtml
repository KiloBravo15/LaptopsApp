@model LaptopsApp.Web.Models.Laptop

@{
    Layout = "_Layout";
}

<h2>Delete Laptop Confirmation</h2>

<div>
    <h4>Are you sure you want to delete the following laptop?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>
        <dt class="col-sm-2">
            Producer
        </dt>
        <dd class="col-sm-10">
            @Model.Producer?.Name
        </dd>
        <dt class="col-sm-2">
            Model
        </dt>
        <dd class="col-sm-10">
            @Model.Model
        </dd>
        <dt class="col-sm-2">
            Processor
        </dt>
        <dd class="col-sm-10">
            @Model.Processor.ToString()
        </dd>
        <dt class="col-sm-2">
            RAM
        </dt>
        <dd class="col-sm-10">
            @Model.RAM
        </dd>
        <dt class="col-sm-2">
            Storage in GB
        </dt>
        <dd class="col-sm-10">
            @Model.StorageInGB
        </dd>
    </dl>

    @using (Html.BeginForm("Delete", "Laptop", new { id = Model.Id }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Confirm Delete" class="btn btn-danger" />
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-outline-secondary" })
    }
</div>
