@model LaptopsApp.Web.Models.Producer

@{
    Layout = "_Layout";
}

<h2>Delete Producer Confirmation</h2>

<div>
    <h4>Are you sure you want to delete the following producer?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
    </dl>

    @using (Html.BeginForm("Delete", "Producer", new { id = Model.Id }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Confirm Delete" class="btn btn-danger" />
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-outline-secondary" })
    }
</div>
